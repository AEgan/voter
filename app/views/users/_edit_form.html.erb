<h3>Edit <%= current_user.name %></h3>
<%= form_tag sessions_path do %>
<div class="row">
  <div class="centered">
  <div class="control-group">
    <%= label_tag :email %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="actions"><%= submit_tag "Log In" %></div>
</div>
</div>
<% end %>